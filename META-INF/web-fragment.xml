		<listener-class>com.shildon.knight.mvc.ContextLoader</listener-class>
	</listener>
	
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>com.shildon.knight.mvc.DispatcherServlet</servlet-class>
